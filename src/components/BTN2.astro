---
const { data } = Astro.props;
---

<button>
    <p>{data}</p>
</button>

<style>
    button {
        background-color: var(--black);
        width: 291px;
        height: 58px;
        flex-shrink: 0;
        border-radius: var(--cta-btn-border-radius, 35px);
        border: none;
        outline: none;
        cursor: pointer;
    }

    p {
        color: var(--white);
        font-size: medium;
        font-weight: 600;
    }

    button:hover {
        background-color: rgba(255, 255, 0, 0);
        border: 2px solid black;
    }

    button:hover p {
        color: var(--black);
    }

</style>